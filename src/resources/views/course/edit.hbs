<div class="mt-4">
    <h3>Sửa khóa học</h3>
    <form method="POST" action="/course/{{course._id}}/update?_method=PUT">
        <div class="mb-3">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name" value="{{course.name}}">
        </div>

        <div class="mb-3">
            <label for="description">Mô tả khóa học</label>
            <input type="text" name="description" class="form-control" value="{{course.description}}">
        </div>

        <div class="mb-3">
            <label for="image">Hình ảnh</label>
            <input type="text" id="image" name="image" class="form-control" value="{{course.image}}">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        </form>
</div>